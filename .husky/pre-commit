#!/bin/bash
# Protect master and development from accidental commits.


echo "************************************"
echo "                                    "
echo "ğŸ Pre-commit Hook: Checking branch name..."
echo "------------------------------------"

branchName=$(git branch | grep '*' | sed 's/* //')

if [ $branchName == 'master' ]
then
  echo "ğŸš« Commit directly to master branch is not allowed!"
  echo "------------------------------------"
  echo "                                    "  && exit 1
fi

if [ $branchName == 'development' ]
then
  echo "ğŸš« Cannot push to remote develop branch, please create your own branch and use PR." 
  echo "------------------------------------" 
  echo "                                    "  && exit 1
fi

echo "âœ… Finish checking branch name."
echo "                                    "
echo "************************************"

exit 0